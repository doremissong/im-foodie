<!-- STYLESHEET -->
<link rel="stylesheet" href="/css/gatherImade.css">

<!--SECTION-->
<section>

	<!-- 전체 틀 -->
    <div class="gather-section">

		<!-- 밥모임 카테고리 -->
        <div class="gather-list">
            <div class="gather-main">
                <a href="/gather">밥모임</a>
            </div>
			<div class="gather-sub">
				<ul class="gather-sub-list">
					<li class="gather-sub-name">
						<a href="/gather/recruiting?countperpage=9&gsort=0">모집중</a>
					</li>
					<li class="gather-sub-name">
						<a href="/gather/completed?countperpage=9&gsort=1">모집완료</a>
					</li>
					<li class="gather-sub-name">
						<span class="font-bold" style="font-weight: 800;">
							<% if(typeof user == 'undefined'){ %>
								<a href="javascript:void(0)" onclick="alert('로그인 후에 이용하실 수 있습니다');">나의 밥모임</a>
							<% } else { %>
								<a href="/gather/mine">나의 밥모임</a>
							<% } %>
						</span>
					</li>
				</ul>
			</div>
        </div>

		<!-- 내가 모집 부분 -->
		<div class="Imade-box">

			<!-- 내가 모집한 밥모임 -->
			<div class="gathering-title">
				<span class="text">내가 모집한 밥모임</span>
				<!-- <span class="more">
					<a href="/gather/imade?countperpage=9&gsort=0">[더보기]</a>
				</span> -->
			</div>

			<!-- 내가 모집한 밥모임이 없을 경우만 출력 -->
			<% if (typeof dataList == 'undefined' || dataList == ""){ %>
				<div class="no-gather">
					아직 모임을 만들지 않으셨네요? 함께 맛집을 탐방 할 친구들을 모집해보세요 :)
				</div>

			<!-- 내가 모집한 모임이 있을 경우만 -->
			<% } else{ %>

                <div class="gather-imade-box">
					<% dataList.forEach((data, index)=>{ %>
						<!-- 리스트 내용 불러오기 -->
						<div class="imade-list-index">
							<div class="imade-index-name">
								<!-- 해당 밥모임 view 페이지로 이동 -->
								<a href="/gather/view?no=<%= data.gahtering_id %>">
									<%= data.name %>
								</a>
							</div>
							<div class="imade-index-btn">
								<span class="imade-block-btn">▼</span>
								<span class="imade-none-btn">▲</span>
							</div>
                    	</div>
						<div class="imade-contents-none">
							<!-- 정보 불러오기 -->
							<div class="imade-content">
								<div class="imade-region">
									모임 지역 : 
									<span>
										<%= data.city + ' ' + data.district + ' ' +data.neighborhood %>
									</span>
								</div>
	
								<div class="imade-spot">
									함께 할 맛집 : 
									<span><%= data.place %>왕짜장</span>
								</div>
								
								<div class="imade-numbers">
									모임 인원수 (현재 / 총원) : 
									<span><%= data.currentHeadCount %> / <%= data.maximumHeadCount %> 3 / 5</span>
								</div>
							
								<div class="imade-deadline">
									모집 마감일 : 
									<span><%= data.deadline.toISOString().slice(0,10); %>2023년 12월 31일</span>
								</div>

								<div class="imade-intro">
									<div class="imade-intro-title">
										소개글 : 
									</div>
									<div class="imade-intro-text">
										안녕하세요~ 소개글 내용! 안녕하세요~ 소개글 내용! 안녕하세요~ 소개글 내용! 안녕하세요~ 소개글 내용! 
									</div>
								</div>
							</div>
	
							<div class="imade-gochat">
								<button>채팅방</button>
							</div>
						
						</div>
                    <% }) %>
                </div>
			<% } %>
		</div>
		
    </div>
        <ul class="post-list">
			<!-- 어디서 온 코드지?? -->
            <% dataList.forEach((data, index)=>{ %>
                <li class="post">
                    <div class="post-container">
						<!-- 페이지네이션수정 -->
                        <p class="post-number"><%= dataList.gathering_id %></p>
                        <p class="post-title"><a href="/gather/details?id=<%= data.gathering_id %>"><%= data.name %></a></p>
                        <p class="post-writer"><%= data.leader_id %></p>
                        <p class="post-date"><%= data.deadline.toISOString().slice(0,10) %></p>
						<% if(data.state==0){ %>
							<p class="post-date">모집중</p>
						<% } else if(data.state==1) { %>
							<p class="post-date">모집마감 (2)수정</p>
						<% } %>
						<p class="post-date">
							<!-- /gather/edit?id=<%= data.gathering_id %>-->
							<% if (data.leader_id == user.mem_id){ %>
								<a href="">
									<button class="write-button">
										관리
									</button>
								</a>
							<% } else{ %>
								<a href="">
									<button class="write-button">
										어떤 버튼으로 할까
									</button>
								</a>
							<% } %>
						</p>
                    </div>
                </li>
            <% }); %>
        </ul>
    </div>
	
</section>