<!-- STYLESHEET -->
<link rel="stylesheet" href="/css/board.css">

<!-- SECTION -->
<section>
    <div class="board-section">
        <div class="board-list">
            <div class="board-main">
                나의 밥모임 채팅
            </div>
        </div>
		<ul class="post-index">
			<li>
				<div class="post-standard">
					<p class="post-number">번호</p>
					<p class="post-title">밥모임이름</p>
					<p class="post-writer"></p>
					<p class="post-date"></p>
				</div>
			</li>
		</ul>

        <ul class="post-list">
			<% if(typeof msg != "undefined"){ %>
				<%= msg %>
			<% } %>
            <!-- <li class="post">
              	<div class="post-container">
                	<p class="post-number">번호</p>
					<p class="post-board">게시판</p>
					<p class="post-title">제목</p>
					<p class="post-writer">글쓴이</p>
					<p class="post-date">작성일</p>
					<p class="post-view">조회수</p>
              	</div>
            </li> -->
            <% if (typeof dataList != "undefined") { %>
            <% dataList.forEach((data, index)=>{ %>
                <li class="post">
                    <div class="post-container">
						<!-- 페이지네이션수정 -->
                        <p class="post-number"><%= data.gathering_id %></p>
                        <p class="post-title"><a href="/gather/details?id=<%= data.gathering_id %>"><%= data.name %></a></p>
                        <p class="post-writer">
                            <table>
                                <tr>
                                    <th><img src="/images/person.png" alt="인원: " style="margin: 3px; width: 15px;height: 15px;"></th>
                                    <th><strong id="count">
                                            <%= data.currentHeadCount%>
                                        </strong></th>
                                </tr>
                            </table>
                        </p>
                        <p class="post-writer">
                            <form action="/gather/chat/room" method="get">
                                <input type="text" name="roomId" value="<%= data.gathering_id %>" hidden>
                                <input type="text" name="name" value="<%= data.name %>"hidden>
                                <button type="submit">입장하기</button>
                            </form>
                        </p>
                    </div>
                </li>
            <% }); %>
            <% } %>
        </ul>
    </div>
</section>