<!-- STYLESHEET -->
<link rel="stylesheet" href="/css/recipeWrite.css">

<!-- SECTION -->
<section>

    <!-- 전체 틀 -->
    <div class="recipe-write-section">

        <!-- 글 작성 틀 -->
        <div class="recipe-write-wrap">

            <!-- 레시피 작성하기와 밑줄 -->
            <div class="recipe-write-main">
                레시피 작성하기
            </div>

            <!-- 레시피 작성 폼 -->
            <form name="recipe-write-form" method="post">

                <!-- 레시피 작성 div -->
                <div class="recipe-form-box">

                    <!-- 제목과 태그 박스 -->
                    <div class="recipe-write-titlentag">

                        <!-- 제목 박스 -->
                        <div class="recipe-write-title">
                            <input type="text" name="title" placeholder="제목" value="" required />
                        </div>

                        <!-- 태그 선택 checkbox 박스 -->
                        <div class="recipe-write-tag">

                            <!-- 태그 -->
                            <div class="tag-title">
                                태그
                            </div>

                            <!-- 태그 종류 -->
                            <div class="tag-category">
                                <!-- required 어카지... 최소 하나 선택하게끔 -->
                                <input type="checkbox" id="easy" name="tag" value="01">
                                <label for="easy">#초보자</label>
                                <input type="checkbox" id="simple" name="tag" value="02">
                                <label for="simple">#간단</label>
                                <input type="checkbox" id="night" name="tag" value="03">
                                <label for="night">#야식</label>
                                <input type="checkbox" id="lunchbox" name="tag" value="04">
                                <label for="lunchbox">#도시락</label>
                                <input type="checkbox" id="party" name="tag" value="05">
                                <label for="party">#홈파티</label>
                                <input type="checkbox" id="health" name="tag" value="06">
                                <label for="health">#건강식</label>
                                <input type="checkbox" id="alcohol" name="tag" value="07">
                                <label for="alcohol">#안주</label>
                                <input type="checkbox" id="dessert" name="tag" value="08">
                                <label for="dessert">#디저트</label>
                            </div>

                        </div>

                    </div>

                    <!-- 썸네일과 간략 소개글 -->
                    <div class="thumbnintro-box">
                        <!-- 썸네일(레시피 전체리스트에 보여지는 대표이미지) 업로드 -->
                        <div class="thumbnail-box">
                            썸네일 업로드 영역
                        </div>

                        <!-- 간략 소개글 적기 -->
                        <div class="intro-box">
                            <textarea name="intro" placeholder="소개글을 적어주세요." required></textarea>
                        </div>
                    </div>

                    <!-- 필요 재료 적는 칸 -->
                    <div class="ingredients">
                        <textarea name="ingredients" placeholder="필요한 재료들을 적어주세요." required></textarea>
                    </div>

                    <!-- 버튼 클릭시 텍스트아리아 div display:none -> display:block, 요리 단계 추가용 -->
                    <!-- 단계별 작성하기, 단계당 이미지 하나 업로드 가능, 거기에 맞는 요리 단계 설명글 적기 -->
                    <!-- 9단계까지! -->
                    <!-- display:none인 div에 있는 textarea required 어케 작동..? -->
                    <div class="recipe-write-content">

                        <!-- 단계 1 -->
                        <div class="recipe-step-01">

                            <!-- 텍스트아리아 -->
                            <div class="step-area-01">
                                <textarea name="step01" placeholder="단계 1." required></textarea>
                            </div>

                            <!-- 단계 추가 버튼. 누르면 다음 단계 div display:block으로 바꾸기 -->
                            <button type="button" id="addStep01">보이기</button>
                            <button type="button" id="delStep01">감추기</button>

                        </div>

                        <!-- 단계 2 -->
                        <div id="step-02" class="recipe-step-02">

                            <!-- 텍스트아리아 -->
                            <div class="step-area-02">
                                <textarea id="stepArea02" name="step02" placeholder="단계 2." required></textarea>
                            </div>

                            <!-- 단계 추가 버튼. 누르면 다음 단계 div display:block으로 바꾸기 -->
                            <button type="button" id="addStep02">보이기</button>
                            <button type="button" id="delStep02">감추기</button>

                        </div>

                        <!-- 단계 3 -->
                        <div id="step-03" class="recipe-step-02">

                            <!-- 텍스트아리아 -->
                            <div class="step-area-03">
                                <textarea id="stepArea03" name="step03" placeholder="단계 3." required></textarea>
                            </div>

                            <!-- 단계 추가 버튼. 누르면 다음 단계 div display:block으로 바꾸기 -->
                            <button type="button" id="addStep03">보이기</button>
                            <button type="button" id="delStep03">감추기</button>
                            
                        </div>


                    </div>
                    
                </div>

                <!-- 폼 등록 버튼 -->
                <div class="submit-button">
                    <button type="submit" name="submit">등록하기</button>
                </div>

            </form>

        </div>

    </div>

</section>