<!-- STYLESHEET -->
<link rel="stylesheet" href="/css/recipeWrite.css">

<!-- SECTION -->
<section>

    <!-- 전체 틀 -->
    <div class="recipe-write-section">

        <!-- 글 작성 틀 -->
        <div class="recipe-write-wrap">

            <!-- 레시피 작성하기와 밑줄 -->
            <div class="recipe-write-main">
                레시피 작성하기
            </div>

            <!-- 레시피 작성 폼 -->
            <form name="recipe-write-form" action="/recipe/write" method="POST">

                <!-- 레시피 작성 div -->
                <div class="recipe-form-box">

                    <!-- 제목과 태그 박스 -->
                    <div class="recipe-write-titlentag">

                        <!-- 제목 박스 -->
                        <div class="recipe-write-title">
                            <input type="text" name="title" placeholder="제목을 입력해주세요 :)" value="" required />
                        </div>

                        <!-- 태그 선택 checkbox 박스 -->
                        <div class="recipe-write-tag">

                            <!-- 태그 -->
                            <div class="tag-title">
                                태그
                            </div>

                            <!-- 태그 종류 -->
                            <div class="tag-category">
                                <!-- required... 최소 하나 선택하게끔 -->
                                <% tagNameList.forEach((name, index)=>{ %> 
                                    <input type="checkbox" id="<%= tagIdList[index] %>" name="tag" value="<%= tagIdList[index] %>">
                                    <label for="<%= tagIdList[index] %>">#<%= name %></label>
                                <% }) %>
                                서버에선 어떻게 나오려나, value를 받으려나?
                            </div>

                        </div>

                    </div>

                    <!-- 쿡타임과 난이도 별표시 -->
                    <div class="timenstar">

                        <!-- 쿡타임 -->
                        <div class="cooktime-label">
                            ⏱️쿡타임 약 
                            <div class="cooktime-box">
                                <input type="number" name="cooktime" placeholder="분" step="5" min="5" max="99" maxlength="2" oninput="checkMaxLength(this)" required>
                            </div>
                            분
                        </div>
                            
                        <!-- 난이도 별표시 -->
                        <div class="levelstar-label">
                            난이도
                        </div>
                        <div class="levelstar-box">
                            <fieldset class="rate">
                                <input type="radio" id="rating10" name="rating" value="5"><label for="rating10" title="5점"></label>
                                <!-- <input type="radio" id="rating9" name="rating" value="9"><label class="half" for="rating9" title="4.5점"></label> -->
                                <input type="radio" id="rating8" name="rating" value="4"><label for="rating8" title="4점"></label>
                                <!-- <input type="radio" id="rating7" name="rating" value="7"><label class="half" for="rating7" title="3.5점"></label> -->
                                <input type="radio" id="rating6" name="rating" value="3"><label for="rating6" title="3점"></label>
                                <!-- <input type="radio" id="rating5" name="rating" value="5"><label class="half" for="rating5" title="2.5점"></label> -->
                                <input type="radio" id="rating4" name="rating" value="2"><label for="rating4" title="2점"></label>
                                <!-- <input type="radio" id="rating3" name="rating" value="3"><label class="half" for="rating3" title="1.5점"></label> -->
                                <input type="radio" id="rating2" name="rating" value="1" ><label for="rating2" title="1점"></label>
                                <!-- <input type="radio" id="rating1" name="rating" value="1"><label class="half" for="rating1" title="0.5점"></label> -->

                            </fieldset>
                        </div>

                    </div>

                    <!-- 썸네일과 간략 소개글 -->
                    <div class="thumbnintro-box">

                        <!-- 썸네일(레시피 전체리스트에 보여지는 대표이미지) 업로드 -->
                        <div class="thumbnail-box">

                            <!-- 썸네일 타이틀과 업로드 버튼 박스 -->
                            <div class="thumbnail-box-left">
                                <div class="thumbnail-prev-title">
                                    썸네일 250 x 160 픽셀
                                </div>

                                <!-- 이미지 업로드 버튼 -->
                                <div class="thumbnail-prev-btn">
                                    <label for="file">
                                        <div class="btn-upload">업로드</div>
                                    </label>
                                    <input type="file" name="image_url" id="file" accept="image/*" value="" onchange="readURL(this);" required> 
                                </div>

                            </div>

                            <div class="thumbnail-box-right">
                                <!-- 이미지 미리보기 박스 -->
                                <img class="image-box" id="preview" />
                            </div>

                        </div>

                        <!-- 간략 소개글 적기 -->
                        <div class="intro-box">
                            <div class="intro-title">
                                레시피 소개글
                            </div>
                            <textarea name="intro" placeholder="소개글을 적어주세요." required></textarea>
                        </div>
                    </div>

                    <!-- 필요 재료 적는 칸 -->
                    <!-- 재료 최대 24개 입력 가능 -->
                    <!-- 재료 이름 ex)양파 : name ingredient1,2,... -->
                    <!-- 재료 양 ex)한개 : name quantity1,2... -->
                    <!-- 기본 한 개는 display:flex -->
                    <div class="recipe-write-ingredients">  

                        <!-- 재료 타이틀 -->
                        <div class="ingredients-title">
                            <span>재료 입력하기</span>
                            <button type="button" id="addIQ">추가하기</button>
                        </div>

                        <!-- 재료 입력란 -->
                        <div class="ingredients-box">

                            <!-- 재료 4개씩 묶기 -->
                            <!-- 재료 1 ~ 4번 -->
                            <div class="ingredients-bind">
                                    
                                <!-- 재료 1 -->
                                <div id="IQ1" class="recipe-ingredient-basic">

                                    <!-- 재료 1번 입력하기 input -->
                                    <div class="ingredient">
                                        <input type="text" name="ingredient1" id="I1" placeholder="ex) 양파" required>
                                        <input type="text" name="quantity1" id="Q1" placeholder="ex) 1개" required>
                                        <button type="button" id="delIQ1">X</button>
                                    </div>

                                    <!-- 콤마 -->
                                    <div class="comma-box">
                                        &nbsp;,
                                    </div>

                                </div>

                                <!-- 재료 2 -->
                                <div id="IQ2" class="recipe-ingredient">

                                    <!-- 재료 2번 입력하기 input -->
                                    <div class="ingredient">
                                        <input type="text" name="ingredient2" id="I2" placeholder="ex) 양파"" required>
                                        <input type="text" name="quantity2" id="Q2" placeholder="ex) 1개" required>
                                        <button type="button" id="delIQ2">X</button>
                                    </div>

                                    <!-- 콤마 -->
                                    <div class="comma-box">
                                        &nbsp;,
                                    </div>

                                </div>

                            </div>
                            
                        </div>

                    </div>

                    <!-- 버튼 클릭시 텍스트아리아 div display:none -> display:flex, 요리 단계 추가용 -->
                    <!-- 단계별 작성하기, 단계당 이미지 하나 업로드 가능, 거기에 맞는 요리 단계 설명글 적기 -->
                    <!-- 일단 최대 9단계까지! -->
                    <div class="recipe-write-content">

                        <!-- 단계 타이틀 -->
                        <div class="content-title">
                            <span>단계 입력하기</span>
                            <button type="button" id="addStep">추가하기</button>
                        </div>

                        <!-- 단계 입력란 -->
                        <div class="content-box">

                            <!-- 단계 1 -->
                            <div id="step-1" class="recipe-step-basic">

                                <!-- STEP 타이틀 -->
                                <div class="step-title">
                                    STEP 1
                                </div>

                                <!-- 단계 이미지 하나 업로드 필수x -->
                                <div class="step-image">
                                    이미지
                                </div>

                                <!-- 텍스트아리아 -->
                                <div class="step-area-box">
                                    <textarea id="stepArea1" name="step1" placeholder="단계 1." required></textarea>
                                </div>

                                <button type="button" id="delStep1">X</button>
                        
                            </div>

                        <!-- 단계 2 -->
                        <div id="step-2" class="recipe-step">

                            <div class="">단계 2</div>

                            <!-- 단계 이미지 하나 업로드 필수x -->
                            <div class="step-image">
                                이미지
                            </div>

                            <!-- 텍스트아리아 -->
                            <div class="step-area-box">
                                <textarea id="stepArea2" name="step2" placeholder="단계 2." required></textarea>
                            </div>

                            <button type="button" id="delStep2">X</button>

                        </div>

                    </div>
                    
                </div>

                <!-- 폼 등록 버튼 -->
                <div class="submit-button">
                    <button type="submit" name="submit">등록하기</button>
                </div>

            </form>
            <form id="test_form" action="/recipe/write" method="post">
                <input type="text" name="title" required>
                <button type="submit"> 등록</button>
            </form>

        </div>

    </div>

</section>